@{
    ViewData["Title"] = "Contact InFo";
}
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">@ViewData["Title"]</h1>
        <p class="text-muted">We'd love to hear from you! Contact us using the information below.</p>
    </div>

    <div class="row g-4">
        <!-- Contact Details -->
        <div class="col-md-12">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Get in Touch</h5>
                    <p class="card-text">
                        <strong>Address:</strong><br />
                        123 Main Street, Dhaka, Bangladesh<br /><br />

                        <strong>Email:</strong><br />
                        contact@example.com<br /><br />

                        <strong>Phone:</strong><br />
                        +880 1234 567 890
                    </p>
                </div>
            </div>
        </div>

        <!-- Google Map -->
        <div class="col-md-12">
            <div class="card shadow-sm h-100">
                <div class="card-body p-0">
                    <div class="ratio ratio-4x3">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3651.9026453000056!2d90.39105157598664!3d23.75087677867856!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755b894041fd0d7%3A0xc56a8045cc1a6935!2sDhaka%2C%20Bangladesh!5e0!3m2!1sen!2sbd!4v1683542101223!5m2!1sen!2sbd" 
                            width="600" 
                            height="450" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
